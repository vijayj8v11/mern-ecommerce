{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack e-commerce platform using MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently --kill-others-on-fail --prefix name --names \"SERVER,CLIENT\" --colors \"red.bold,blue.bold\" \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev:server": "nodemon server.js",
    "dev:client": "cd client && npm start",
    "dev:windows": "start \"Backend\" cmd /k \"npm run dev:server\" && start \"Frontend\" cmd /k \"npm run dev:client\""
  },
  "keywords": ["mern", "ecommerce", "react", "node", "mongodb"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "cloudinary": "^1.41.3",
    "socket.io": "^4.7.4",
    "redis": "^4.6.12",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  }
} 